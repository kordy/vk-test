body {
  font-family: -apple-system,BlinkMacSystemFont,Roboto,Helvetica Neue,sans-serif;
}

.dropdown {
  background: #fff;
  border: 1px solid #d3d9de;
  border-radius: 2px;
  padding: 2px 2px 1px;
  position: relative;
  width: 340px;
}
.dropdown__input {
  width: 100%
  border: none;
  outline: none;
}
.dropdown__arrow {
  background url(assets/dropdown_arrow.png) no-repeat 2px 50%;
  width: 21px;
  height: 25px;
  overflow: hidden;
  cursor: pointer;
  position: absolute;
  top: 0;
  right: 0;
}
.dropdown-list {
  border: solid #c9d0d6;
  border-width: 0 1px 1px;
  border-radius: 0 0 2px 2px;
  box-shadow: 0 1px 3px rgba(0,0,0,.1);
  position: absolute;
  left: -1px;
  right: -1px;
}
.dropdown-list__item {
  padding:10px;
  overflow: hidden;
  border-top: 1px solid #c9d0d6;
  &:hover {
    background: #f0f2f5;
  }
  &:first-child {
    border-top: none;
  }
}
.dropdown-list__image {
  width: 36px;
  height: 36px;
  margin-right: 20px;
  margin-left: 0;
  border-radius: 50%;
  float: left;

}
.dropdown-list__name {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-weight: 700;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  color: #42648b;
}